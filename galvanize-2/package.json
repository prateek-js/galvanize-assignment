{
  "name": "galvanize-api-task",
  "version": "1.0.0",
  "description": "nodejs project for galvanize api task ",
  "main": "server.ts",
  "scripts": {
    "start-server": "tsc && node dist/server.js",
    "start": "nodemon -e ts -w ./ -x npm run start-server",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"set NODE_ENV=local&&nodemon dist/server.js\"",
    "test": "jest --coverage --detectOpenHandles --silent",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/lodash": "^4.14.159",
    "@types/uuid": "^8.0.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dd-trace": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.2.0",
    "lodash": "^4.17.19",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.6",
    "uuid": "^8.3.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.4",
    "@types/shelljs": "^0.8.8",
    "aws-sdk-mock": "^5.1.0",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "tslint": "^6.1.2",
    "tslint-no-circular-imports": "^0.7.0"
  }
}
